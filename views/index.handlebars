<div class="container">
    <h1>Eat-Da-Burger!</h1>
    <div class="column1">

        <h2 id="notEaten">Burgers that have yet to be eaten!</h2>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="column2">
        <h2 id="eaten">Burgers that have been devoured!</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/if}}
            {{/each}}
        </ul>
    </div>

    <div class="burgerForm">
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id="burger" name="burger_name">

                <button type="submit" id="newBurger">Add Burger</button>
            </div>
        </form>
    </div>
</div>